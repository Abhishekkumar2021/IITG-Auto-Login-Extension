{
  "manifest_version": 3,
  "name": "IITG AutoLogin++",
  "description": "IITG Login extension, keeps you logged in to IITG Network, no need to keep authentication tab open.",
  "version": "1.0",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "Popup.html"
  },
  "options_page": "Options.html",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://agnigarh.iitg.ac.in:1442/*"
  ],
  "icons": {
    "128": "Icons/icon_active2.png"
  }
}